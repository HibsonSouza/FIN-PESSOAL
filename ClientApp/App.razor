<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <MudText Typo="Typo.h4" Align="Align.Center" Class="mt-6">
                            Acesso Negado
                        </MudText>
                        <MudText Typo="Typo.body1" Align="Align.Center" Class="mt-2">
                            Você não tem permissão para acessar esta página.
                        </MudText>
                    }
                </NotAuthorized>
                <Authorizing>
                    <MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" Class="my-4 mx-auto" />
                </Authorizing>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
                    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
                        Página não encontrada
                    </MudText>
                    <MudDivider Class="my-4" />
                    <MudText Typo="Typo.body1" Align="Align.Center">
                        A página que você está tentando acessar não existe ou foi movida.
                    </MudText>
                    <MudPaper Elevation="0" Class="d-flex justify-center mt-8">
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" 
                            Href=""
                            StartIcon="@Icons.Material.Filled.Home">
                            Voltar ao Início
                        </MudButton>
                    </MudPaper>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

